package kr.co.mlec.board.test;
import java.util.Scanner;

public class BoardTestPr2 {
	public static void main(String[] args) {
		Scanner sc = new Scanner(System.in);
		BoardVOPr board = new BoardVOPr();//같은 패키지에 넣어서 임포트는 위에있는걸로 퉁침

		outer: while (true) {
			int sel = 0;
			System.out.println("-----------------");
			System.out.println("1. 전체 게시물 조회");
			System.out.println("2. 글번호 조회");
			System.out.println("3. 글등록");
			System.out.println("4. 글수정");
			System.out.println("5. 글삭제");
			System.out.println("0. 종료");
			System.out.println("-----------------");
			System.out.print("작업 선택: ");
			sel=Integer.parseInt(sc.nextLine());
			System.out.println("-----------------");

			switch (sel) {
			case 1:
				System.out.println("-----------------");
				System.out.println("1. 전체 게시물 조회");
				System.out.println("-----------------");
				break;
			case 2:
				System.out.println("-----------------");
				System.out.println("2. 글번호 조회");
				System.out.println("-----------------");
				break;
			case 3:	
				System.out.println("-----------------");
				System.out.println("3. 글등록");
				System.out.println("-----------------");
				break;
			case 4:	
				System.out.println("-----------------");
				System.out.println("4. 글수정");
				System.out.println("-----------------");
				break;
			case 5:	
				System.out.println("-----------------");
				System.out.println("5. 글삭제");
				System.out.println("-----------------");
				break;
			case 0:	
				System.out.println("-----------------");
				System.out.println("0. 종료");
				System.out.println("-----------------");
				break outer;
			}
		}

	}
}
